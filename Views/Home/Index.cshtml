            <a class="header" href="home/Cart"> Koszyk</a>
        </header>
    </div>
    <nav>
        <img src="Photos/pugcorn-manuel-schmucker.jpg" alt="pugcorn-manuel-schmucker.jpg" style="width: 100%; height: 5%; object-fit: cover; object-position: 50%;" fetchpriority="high">
    </nav>
        <p style="text-align:center; font-size:48px;"> BESTSELLERY</p>
        <article>
            @{
                @inject ProductService productService;
                var products = productService.FindAll();
            }

            <ul>
                @foreach (var product in products)
                {
                    <li>@product.Name</li>
                    <li>@product.Description</li>
                    <li>@product.Price</li>
                }
            </ul>

        </article>

    <div id="button">
        <button aria-disabled="false" data-testid="buttonElement" href="Zakupy.html"> Zobacz wszystkie</button>
    </div>

<section>
        <div id="D">
            <li> <a data-testid="linkElement-0" href="/" target="_self" tabindex="0">STRONA GŁÓWNA</a></li>
            <li><a data-testid="linkElement-1" href="/home/Shopiings" target="_self" tabindex="0">ZAKUPY</a></li>
            <li><a data-testid="linkElement-2" href="home/contact" target="_self" tabindex="0">KONTAKT</a></li>
        </div>
        
        <div id="B">
            <li><a class="box2" href="FAQ.html" target="_self">FAQ</a></li>
